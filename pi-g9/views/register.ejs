
<%- include('./partial/header') %>

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2  class="col-12">
				<form action="/register" method="POST", novalidate>
					<label for="email">Email: </label>
					<input type="email" name="email" required  value="<%= locals.oldData && oldData.email ? oldData.email : null %>" >
					<% if (locals.errors && errors.email) { %>
						<div class="error">
							<%= errors.email.msg %>                                
						</div>                            
					<% } %>    
					<br>
					<br>
					<label for="name">Nombre de usuario: </label>
					<input type="name" name="name" required  value="<%= locals.oldData && oldData.name ? oldData.name : null %>" >
					<% if (locals.errors && errors.name) { %>
						<div class="error">
							<%= errors.name.msg %>                                
						</div>                            
					<% } %>    
					<br>
					<br>
					<label for="password">Contrase√±a: </label>
					<input type="password" name="password" required>
					<% if (locals.errors && errors.password) { %>
						<div class="error">
							<%= errors.password.msg %>                                
						</div>                            
					<% } %>    
					<br>
					<br>
					<label for="fecha">Fecha de nacimiento: </label>
					<input type="date" name="fecha" required value="<%= locals.oldData && oldData.fecha ? oldData.fecha : null %>">
					<br>
					<br>
					<label for="dni">Numero de documento: </label>
					<input type="number" name="dni" required value="<%= locals.oldData && oldData.dni ? oldData.dni : null %>">
					<br>
					<br>
					<label for="foto">Foto de perfil: </label>
					<input type="text" name="foto" value="<%= locals.oldData && oldData.foto ? oldData.foto : null %>">
					<br>
					<button type="submit" class="btn mt-3 ml-4" >Crear Cuenta</button>
				</form>
			</h2>
			</h2>


			<%- include('./partial/footer.ejs') %>
