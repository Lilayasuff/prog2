<%- include('./partial/header.ejs') %>


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de tu b√∫squeda:</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
				<% for( let i = 0; i < 1; i++ ) { %>
			
					<div class="col-12 col-sm-6 col-lg-3">
