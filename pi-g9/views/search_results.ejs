<% if(locals.user){%>
	<%- include('./partial/headerLogueado') %>
<% } else { %>
	<%- include('./partial/header') %>
<% } %>%>


	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de tu b√∫squeda:</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% if (!busca) { %>
				<h2>No buscaste nada </h2>
			 
			<% } else if (Products.length == 0) {%>
				<h2> No encontramos resultados para la busqueda <%= busca %></h2>
			 
			<% } else { %>
				<% for (let i = 0; i < Products.length; i++) { %>
			
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/product/<%= Products[i].id %>">
								<figure class="product-box_image">
									<% if (Products[i].imagen == undefined) { %>
											<img src="/images/products/default-image.png" alt="imagenPre">
									 
									<% } else{ %>
										<img src="/images/products/<%= Products[i].imagen %>" alt="<%= Products[i].producto %>">
										<% } %>
								</figure>
								<article class="product-box_data">
									<h2><%= Products[i].producto %></h2>
									<p>Descripcion: <%= Products[i].descripcion %></p>
									<p>Usuario: <a href="/profile/<%= Products[i].Users.id %>"><%= Products[i].Users.email %></a></p>
								</article>
							</a>
						</section>
					</div>
				<% } %>
				<% } %>
			

			<%- include('./partial/footer.ejs') %>
			