
<%- include('./partial/header.ejs') %>
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner2.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"> Novedades </h2>
			</div>
			
			<% for( let i = 0; i < 4; i++ ) { %>
			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="./product">
							<figure class="product-box_image">
								<img src="<%=productos[i].imagen %>" alt="Adidas forum mid">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].producto %></h2>
								<p>Descripcion: <%= productos[i].descripcion %></p>
								<p>Comentarios: <%= productos[i].comentarios.length%> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			
	<div class="container products-wrapper">
		<div class="row">
			<% for( let i = 6; i < 10; i++ ) { %>
			
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="./product">
							<figure class="product-box_image">
								<img src="<%=productos[i].imagen %>" alt="Adidas forum mid">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].producto %></h2>
								<p>Descripcion: <%= productos[i].descripcion %></p>
								<p>Comentarios: <%= productos[i].comentarios.length%> </p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
	<!-- /Más comentados -->


	<%- include('./partial/footer.ejs') %>
